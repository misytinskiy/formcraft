generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  name      String?
  role      Role       @default(USER)
  status    Status     @default(ACTIVE)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  comments  Comment[]
  forms     Form[]     @relation("UserForms")
  likes     Like[]
  responses Response[]
}

model Form {
  id          String     @id @default(uuid())
  title       String
  description String?
  topic       String
  imageUrl    String?
  isPublic    Boolean    @default(true)
  authorId    String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  comments    Comment[]
  author      User       @relation("UserForms", fields: [authorId], references: [id])
  likes       Like[]
  questions   Question[]
  responses   Response[]
  tags        Tag[]      @relation("FormTags")
}

model Question {
  id          String       @id @default(uuid())
  formId      String
  title       String
  description String?
  type        QuestionType
  isRequired  Boolean      @default(false)
  order       Int
  options     String[]
  form        Form         @relation(fields: [formId], references: [id])
}

model Response {
  id        String   @id @default(uuid())
  formId    String
  userId    String?
  answers   Json
  createdAt DateTime @default(now())
  form      Form     @relation(fields: [formId], references: [id])
  user      User?    @relation(fields: [userId], references: [id])
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  formId    String
  authorId  String
  createdAt DateTime @default(now())
  author    User     @relation(fields: [authorId], references: [id])
  form      Form     @relation(fields: [formId], references: [id])
}

model Like {
  id     String @id @default(uuid())
  formId String
  userId String
  form   Form   @relation(fields: [formId], references: [id])
  user   User   @relation(fields: [userId], references: [id])

  @@unique([formId, userId])
}

model Tag {
  id    String @id @default(uuid())
  name  String @unique
  forms Form[] @relation("FormTags")
}

enum Role {
  USER
  ADMIN
}

enum Status {
  ACTIVE
  BLOCKED
}

enum QuestionType {
  SINGLE_LINE_TEXT
  MULTI_LINE_TEXT
  POSITIVE_INTEGER
  CHECKBOX
  RADIO_BUTTON
}
